<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anime Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<!-- Navigation Bar -->
<div class="navbar">
    <div class="navbar-logo">
        <a href="/profile"><img src="/logo.png" alt="Logo"></a>
        <span class="navbar-title">Anime Blog</span>
    </div>
    <div class="navbar-links">
        <a href="/" class="nav-link">Home</a>
        <a href="/add" class="nav-link">Add Entry</a>
        <% if (userId) { %>
            <a href="/logout" class="nav-link">Logout</a>
        <% } else { %>
            <a href="/login" class="nav-link">Login</a>
        <% } %>
    </div>
</div>

<div class="popular-anime">
    <h2>Highest Rated Anime</h2>
    <% if (popularAnime && popularAnime.length > 0) { %>
        <% popularAnime.forEach(anime => { %>
            <div class="anime-entry">
                <img src="<%= anime.coverImage.large %>" alt="<%= anime.title.romaji %>">
                <h3><%= anime.title.romaji %></h3>
                <p>Score: <%= anime.averageScore %></p>
            </div>
        <% }) %>
    <% } else { %>
        <p>No popular anime found.</p>
    <% } %>
</div>

<div class="container">
    <h1 class="header">Anime Thoughts</h1>
    <form class="form-container" action="/search" method="GET">
        <input type="text" name="term" placeholder="Search...">
        <button type="submit">Search</button>
    </form>
    <div class="list-container">
        <% entries.forEach(entry => { %>
            <div class="entry">
              <img src="<%= entry.image_url %>" alt="<%= entry.name %>" class="entry-image" onclick="toggleDetails('<%= entry.id %>')">
              <% if (entry.spoiler) { %>
                  <p class="spoiler-warning" id="spoiler-<%= entry.id %>">THIS POST CONTAINS SPOILERS</p>
              <% } %>
              <div id="details-<%= entry.id %>" class="entry-details">
                <h2><%= entry.name %></h2>
                <p>Progress: <%= entry.progress %></p>
                <p>Rating: <%= entry.rating %></p>
                <p>Summary: <%= entry.summary %></p>
                <% if (entry.user_id === userId) { %>
                    <a href="/edit/<%= entry.id %>">Edit</a>
                    <form action="/delete/<%= entry.id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                <% } %>
                <div class="like-dislike">
                  <form action="/like/<%= entry.id %>" method="POST" style="display: inline;">
                    <button type="submit">Like</button>
                  </form>
                  <form action="/dislike/<%= entry.id %>" method="POST" style="display: inline;">
                    <button type="submit">Dislike</button>
                  </form>
                  <p>Likes: <%= entry.likes %> | Dislikes: <%= entry.dislikes %></p>
                </div>
              </div>
            </div>
          <% }) %>
          
    </div>
    <a href="/add" class="add-link">Add New Entry</a>
</div>

<script>
    function toggleDetails(entryId) {
        var detailsDiv = document.getElementById('details-' + entryId);
        var spoilerWarning = document.getElementById('spoiler-' + entryId);
        if (detailsDiv.style.display === 'none') {
            detailsDiv.style.display = 'block';
            if (spoilerWarning) {
                spoilerWarning.style.display = 'none';
            }
        } else {
            detailsDiv.style.display = 'none';
            if (spoilerWarning) {
                spoilerWarning.style.display = 'block';
            }
        }
    }
</script>
</body>
</html>
