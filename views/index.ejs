<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anime Blog</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .popular-anime {
            float: left;
            width: 20%; /* Increase width */
            margin-right: 2%;
            padding-left: 20px; /* Add padding to the left */
        }
        .popular-anime img {
            width: 80%; /* Adjust the width to make images smaller */
            border-radius: 8px;
        }
        .popular-anime h2 {
            font-size: 1.2em;
            margin-bottom: 10px;
        }
        .container {
            width: 70%; /* Decrease width */
            float: right;
            padding-right: 10%;
        }
        .anime-entry {
            text-align: center; /* Center align text and images */
        }
    </style>
</head>
<body>

<!-- Navigation Bar -->
<div class="navbar">
    <div class="navbar-logo">
        <a href="/profile"><img src="/logo.png" alt="Logo"></a>
        <span class="navbar-title">Anime Blog</span>
    </div>
    <div class="navbar-links">
        <a href="/" class="nav-link">Home</a>
        <a href="/add" class="nav-link">Add Entry</a>
        <% if (userId) { %>
            <a href="/logout" class="nav-link">Logout</a>
        <% } else { %>
            <a href="/login" class="nav-link">Login</a>
        <% } %>
    </div>
</div>

<div class="popular-anime">
    <h2>Highest rated Anime</h2>
    <% popularAnime.forEach(anime => { %>
        <div class="anime-entry">
            <img src="<%= anime.coverImage.large %>" alt="<%= anime.title.romaji %>">
            <h3><%= anime.title.romaji %></h3>
            <p>Score: <%= anime.averageScore %></p>
        </div>
    <% }) %>
</div>

<div class="container">
    <h1 class="header">Anime Thoughts</h1>
    <form class="form-container" action="/search" method="GET">
        <input type="text" name="term" placeholder="Search...">
        <button type="submit">Search</button>
    </form>
    <div class="list-container">
        <% entries.forEach(entry => { %>
            <div class="entry">
              <img src="<%= entry.image_url %>" alt="<%= entry.name %>" class="entry-image" onclick="showDetails('<%= entry.id %>')">
              <div id="details-<%= entry.id %>" style="display: none;">
                <h2><%= entry.name %></h2>
                <p>Progress: <%= entry.progress %></p>
                <p>Rating: <%= entry.rating %></p>
                <p>Summary: <%= entry.summary %></p>
                <div class="like-dislike">
                  <form action="/like/<%= entry.id %>" method="POST" style="display: inline;">
                    <button type="submit">Like</button>
                  </form>
                  <form action="/dislike/<%= entry.id %>" method="POST" style="display: inline;">
                    <button type="submit">Dislike</button>
                  </form>
                  <p>Likes: <%= entry.likes %> | Dislikes: <%= entry.dislikes %></p>
                </div>
              </div>
            </div>
          <% }) %>
          
    </div>
    <a href="/add" class="add-link">Add New Entry</a>
    <% if (!userId) { %>
        <a href="/login" class="add-link">Login</a>
        <a href="/register" class="add-link">Register</a>
    <% } else { %>
        <a href="/logout" class="add-link">Logout</a>
    <% } %>
</div>

<script>
    function showDetails(entryId) {
        var detailsDiv = document.getElementById('details-' + entryId);
        if (detailsDiv.style.display === 'none') {
            detailsDiv.style.display = 'block';
        } else {
            detailsDiv.style.display = 'none';
        }
    }
</script>
</body>
</html>
