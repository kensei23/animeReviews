<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %>'s Profile</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="navbar">
        <div class="navbar-logo">
            <a href="/profile">
                <% if (userProfilePicture) { %>
                    <img src="<%= userProfilePicture.startsWith('/') ? userProfilePicture : '/' + userProfilePicture %>" alt="Profile Picture" class="profile-pic">
                <% } else { %>
                    <img src="/logo.png" alt="Profile Picture" class="profile-pic">
                <% } %>
            </a>
            <span class="navbar-title">Anime Blog</span>
        </div>
        <div class="navbar-links">
            <a href="/" class="nav-link">Home</a>
            <a href="/add" class="nav-link">Add Entry</a>
            <a href="/recommendation" class="nav-link">Recommend</a>
            <a href="/watchlist" class="nav-link">Watchlist</a>
            <% if (userId) { %>
                <a href="/logout" class="nav-link">Logout</a>
            <% } else { %>
                <a href="/login" class="nav-link">Login</a>
            <% } %>
        </div>
    </div>

    <div class="container">
        <div class="profile-header">
            <img src="<%= user.profile_picture ? user.profile_picture.startsWith('/') ? user.profile_picture : '/' + user.profile_picture : '/logo.png' %>" alt="<%= user.username %>" class="profile-pic">
            <h1 class="header"><%= user.username %></h1>
            <p>Favourite Anime: <%= user.favourite_anime ? user.favourite_anime : 'Not specified' %></p>
        </div>
        <div class="list-container">
            <h2><%= user.username %>'s Entries</h2>
            <% if (entries && entries.length > 0) { %>
                <% entries.forEach(entry => { %>
                    <div class="entry">
                        <img src="<%= entry.image_url %>" alt="<%= entry.name %>" class="entry-image" onclick="toggleDetails('<%= entry.id %>')">
                        <% if (entry.spoiler) { %>
                            <p class="spoiler-warning" id="spoiler-<%= entry.id %>">THIS POST CONTAINS SPOILERS</p>
                        <% } %>
                        <div id="details-<%= entry.id %>" class="entry-details">
                            <h3><%= entry.name %></h3>
                            <p>Progress: <%= entry.progress %></p>
                            <p>Rating: <%= entry.rating %></p>
                            <p>Summary: <%= entry.summary %></p>
                            <form action="/watchlist/add/<%= entry.id %>" method="POST" style="display:inline;">
                                <button type="submit">Add to Watchlist</button>
                            </form>
                            <div class="like-dislike">
                                <form action="/like/<%= entry.id %>" method="POST" style="display: inline;">
                                  <button type="submit">Like</button>
                                </form>
                                <form action="/dislike/<%= entry.id %>" method="POST" style="display: inline;">
                                  <button type="submit">Dislike</button>
                                </form>
                                <p>Likes: <%= entry.likes %> | Dislikes: <%= entry.dislikes %></p>
                              </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No entries found for this user.</p>
            <% } %>
        </div>
    </div>
    <script>
        function toggleDetails(entryId) {
            var detailsDiv = document.getElementById('details-' + entryId);
            var spoilerWarning = document.getElementById('spoiler-' + entryId);
            if (detailsDiv.style.display === 'none' || !detailsDiv.style.display) {
                detailsDiv.style.display = 'block';
                if (spoilerWarning) {
                    spoilerWarning.style.display = 'none';
                }
            } else {
                detailsDiv.style.display = 'none';
                if (spoilerWarning) {
                    spoilerWarning.style.display = 'block';
                }
            }
        }
    </script>
</body>
</html>
