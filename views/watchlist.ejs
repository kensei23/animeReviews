<!-- views/watchlist.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watchlist</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<!-- Navigation Bar -->
<div class="navbar">
    <div class="navbar-logo">
        <a href="/profile">
            <% if (userProfilePicture) { %>
                <img src="<%= userProfilePicture %>" alt="Profile Picture" class="profile-pic">
            <% } else { %>
                <img src="/logo.png" alt="Profile Picture" class="profile-pic">
            <% } %>
        </a>
        <span class="navbar-title">Anime Blog</span>
    </div>
    <div class="navbar-links">
        <a href="/" class="nav-link">Home</a>
        <a href="/add" class="nav-link">Add Entry</a>
        <a href="/watchlist" class="nav-link">Watchlist</a>
        <% if (userId) { %>
            <a href="/logout" class="nav-link">Logout</a>
        <% } else { %>
            <a href="/login" class="nav-link">Login</a>
        <% } %>
    </div>
</div>

<!-- Watchlist Content -->
<div class="container">
    <h1>Your Watchlist</h1>
    <div class="watchlist-container">
        <% if (watchlist.length > 0) { %>
            <% watchlist.forEach(entry => { %>
                <div class="watchlist-item">
                    <a href="/anime/<%= entry.name %>">
                        <img src="<%= entry.image_url %>" alt="<%= entry.name %>" class="entry-image">
                    </a>
                    <form action="/watchlist/remove/<%= entry.id %>" method="POST">
                        <button type="submit">Remove</button>
                    </form>
                    <h2><%= entry.name %></h2>
                </div>
            <% }) %>
        <% } else { %>
            <p>No entries in your watchlist.</p>
        <% } %>
    </div>
</div>

</body>
</html>
